<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android
"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools
"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".WeatherActivity"
    android:background="#FFFFFF">



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="#99CCFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/mon" />


        <ImageView
            android:id="@+id/imageview_monday_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:src="@drawable/sun" />

        <TextView
            android:id="@+id/monday_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="@string/sunny_25_c" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#99CCFF"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tue"
            android:layout_marginTop="8dp" />


        <ImageView
            android:id="@+id/imageview_tuesday_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cloud"
            android:layout_marginLeft="48dp"/>

        <TextView
            android:id="@+id/tuesday_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_22_c"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#99CCFF"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wed"
            android:layout_marginTop="8dp" />


        <ImageView
            android:id="@+id/imageview_wednesday_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cloud"
            android:layout_marginLeft="28dp" />

        <TextView
            android:id="@+id/wednesday_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_22_c"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#99CCFF"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thu"
            android:layout_marginTop="8dp" />


        <ImageView
            android:id="@+id/imageview_thursday_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/rainy"
            android:layout_marginLeft="43dp"/>

        <TextView
            android:id="@+id/thursday_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rainy_22_c"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#99CCFF"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fri"
            android:layout_marginTop="8dp"/>


        <ImageView
            android:id="@+id/imageview_friday_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="TODO"
            android:src="@drawable/wind"
            android:layout_marginLeft="62dp"/>

        <TextView
            android:id="@+id/friday_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/windy_20_c"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#99CCFF"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sat"
            android:layout_marginTop="8dp" />


        <ImageView
            android:id="@+id/imageview_saturday_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sun"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/saturday_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunny_25_c"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#99CCFF"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sun"
            android:layout_marginTop="8dp" />


        <ImageView
            android:id="@+id/imageview_sunday_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sun"
            android:layout_marginLeft="54dp"/>

        <TextView
            android:id="@+id/sunday_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunny_25_c"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>


</LinearLayout>